@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyHospitalContactsXpm" as ReadOnlyHospitalContactsXpm
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class HospitalContactsXpm
Class ModelManager
Class UserPrefs

Class UniquePersonList
Class Person
Class UniquePrescriptionList
Class Prescription
Class Address
Class Email
Class Name
Class Phone
Class Tag

Class UniqueAppointmentList
Class Appointment
Class AppointmentDateTime

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

HospitalContactsXpm .up.|> ReadOnlyHospitalContactsXpm

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyHospitalContactsXpm
ModelManager -left-> "1" HospitalContactsXpm
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

HospitalContactsXpm *--> "1" UniquePersonList
HospitalContactsXpm *--> "1" UniquePrescriptionList
UniquePrescriptionList --> "~*all" Prescription
UniquePersonList --> "~* all" Person
Person *--> Name
Person *--> Phone
Person *--> Email
Person *--> Address
Person *--> "*" Tag

HospitalContactsXpm *--> "1" UniqueAppointmentList
UniqueAppointmentList --> "~* all" Appointment
Appointment *--> AppointmentDateTime

Person -[hidden]up--> I
UniquePersonList -[hidden]right-> I
UniqueAppointmentList -[hidden]right-> Appointment

Name -[hidden]right-> Phone
Phone -[hidden]right-> Address
Address -[hidden]right-> Email

ModelManager --> "~* filtered" Person
ModelManager -right-> "\n\n\n~* filtered" Prescription
@enduml
